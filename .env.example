# API configuration
API_PORT=3003
API_PREFIX=/api/v1

# CORS configuration
CORS_ORIGIN=http://localhost:3004,http://192.168.0.101:3004

# Swagger API documentation
SWAGGER_ENABLE=1

# Database ORM configuration
DATABASE_URL=postgresql://nestjs:password@localhost:5432/nestjs?schema=public

# JWT configuration (REQUIRED - Must be changed in production)
# JWT_SECRET: Must be at least 32 characters long. Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this-in-production
# JWT_ISSUER: Unique identifier for your application
JWT_ISSUER=VideiraCaruaruAPI
# JWT_EXPIRES_IN: Token expiration time for access tokens (default: 24h)
JWT_EXPIRES_IN=24h
# JWT_REFRESH_EXPIRES_IN: Token expiration time for refresh tokens (default: 7d)
JWT_REFRESH_EXPIRES_IN=7d
# JWT_PASSWORD_RESET_EXPIRES_IN: Token expiration for password reset/invite (default: 48h)
JWT_PASSWORD_RESET_EXPIRES_IN=48h

# Bcrypt configuration (Optional - defaults to 10)
# BCRYPT_SALT_ROUNDS: Number of salt rounds for password hashing (8-15, higher = more secure but slower)
BCRYPT_SALT_ROUNDS=10

# Access to the health route
HEALTH_TOKEN=ThisMustBeChanged

# WhatsApp webhook configuration
WEBHOOK_VERIFY_TOKEN=ThisMustBeChanged

WHATSAPP_MANAGER_API=http://localhost:3005

# Frontend URL (for redirects and emails)
FRONTEND_URL=http://localhost:3004

# Email configuration (Optional - for password reset and invites)
# SMTP_HOST: SMTP server hostname
SMTP_HOST=smtp.gmail.com
# SMTP_PORT: SMTP server port (usually 587 for TLS, 465 for SSL)
SMTP_PORT=587
# SMTP_USER: Email account username
SMTP_USER=your-email@gmail.com
# SMTP_PASS: Email account password or app password
SMTP_PASS=your-email-password
# EMAIL_FROM: Sender email address (optional, defaults to no-reply@SMTP_HOST)
EMAIL_FROM=noreply@example.com

# AWS S3 configuration (Optional - for photo uploads)
# AWS_BUCKET_NAME: S3 bucket name
AWS_BUCKET_NAME=your-bucket-name
# AWS_BUCKET_REGION: AWS region (e.g., us-east-1, sa-east-1)
AWS_BUCKET_REGION=us-east-1
# AWS_ACCESS_KEY: AWS IAM access key
AWS_ACCESS_KEY=your-aws-access-key
# AWS_SECRET_ACCESS_KEY: AWS IAM secret access key
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_CLOUDFRONT_URL: CloudFront distribution URL (optional, for CDN)
AWS_CLOUDFRONT_URL=https://your-cloudfront-url.cloudfront.net/